<h1>All todo list items</h1>
<%= link_to 'New todo', new_page_path %>
<hr />

<% @pages.each do |page| %>
  <div>
    <h3>
      <!-- <a href="/pages/<%= page.id %>" -->
      <%= link_to page.title, page_path(page) %>

    </h3>

    <i>Author: <%= page.author %></i>
    <%= link_to 'Delete', page_path(page), method: :delete %>
  </div>
  <hr />
<% end %>
